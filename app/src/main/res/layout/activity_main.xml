<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dupleit.kotlin.kotlinapp.MainActivity">


    <Button
        android:id="@+id/startTrack"
        android:layout_width="wrap_content"
        android:textColor="@color/colorGreen"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="82dp"
        android:text="@string/StartTracking" />

    <Button
        android:id="@+id/StopTrack"
        android:layout_width="wrap_content"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startTrack"
        android:layout_alignBottom="@+id/startTrack"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="@string/StopTracking" />
</RelativeLayout>
